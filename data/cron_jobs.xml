<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="ir_cron_generate_trips" model="ir.cron">
      <field name="name">Bus Tickets: Generate Future Trips</field>
      <!-- Plně kvalifikovaný ref na model -->
      <field name="model_id" ref="bus_ticket_core.model_bus_ticket_trip_template"/>
      <field name="state">code</field>
      <field name="code">model._cron_generate_trips()</field>

      <!-- Zvol si jedno: root (superuser) nebo admin -->
      <field name="user_id" ref="base.user_root"/>
      <!-- <field name="user_id" ref="base.user_admin"/> -->

      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <!-- POZOR: v Odoo 18 už NEpoužívat numbercall/doall -->
      <field name="active" eval="True"/>
    </record>
  </data>
</odoo>
