<?xml version="1.0" encoding="utf-8"?>
<!-- soubor: bus_ticket_core/data/ir_cron_data.xml -->
<odoo>
    <data noupdate="1">
        <record id="ir_cron_generate_trips" model="ir.cron">
            <field name="name">Bus Tickets: Generate Future Trips</field>
            <field name="model_id" model="ir.model" search="[('model', '=', 'ir.model')]"/>
            <field name="state">code</field>
            <field name="code">env['bus.ticket.trip.template']._cron_generate_trips()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="do_not_execute_on_creation" eval="True"/>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>